        script(src="../bower_components/uri.js/src/uri.min.js")
        script(src="../bower_components/async/lib/async.js")

        // startup
        script.
            define.amd = {}
            seajs.config({
                base: '../'
            })
            seajs.use(['./test'], function (test) {
                test.init()
            })